<section class="breadcrumb-section container-fluid ">
    <div class="breadcrumb-product-row row bg-lightgray">
      <div class="container">
        <div class="row">

          <div class="col">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb text-uppercase mb-0">
                <li class="breadcrumb-item"><a href="/blogs/news">News</a></li>
                <li class="breadcrumb-item active">{{ article.title }}</li>
              </ol>
            </nav>
          </div>
          <div class="d-flex col-md-6 col-lg-4 p-0 justify-content-end align-items-end p-0">
            <ul class="social-shares-ul mb-0" >
              <li class="text-uppercase">Share</li>
              <li>
                <a href="https://www.facebook.com/sharer/sharer.php?u={{ shop.url }}{{ article.url }}" title="Share on Facebook" class="open-share-window text-black px-1" >
                  <i class="fa fa-facebook"></i>
                </a>              
              </li>
              <li>              
                <a href="https://twitter.com/intent/tweet?text={{ article.title }}&url={{ shop.url }}{{ article.url }}&via=ventgripz" title="Share on Twitter"  class="open-share-window text-black px-1" >
                  <i class="fa fa-twitter"></i>
                </a>            
              </li>
            </ul>
          </div>

        </div>
      </div>
    </div>
</section>