<section class="container mb-5 bg-lightgray py-5">
  <div class="row">
    <div class="col">
      <h3 class="text-uppercase mb-3 text-center" >{{ section.settings.title }}</h3>
    </div>
  </div>
  <div class="row">
    <div class="col">
      {{ product.description }}
    </div>
  </div>
</section>


{% schema %}
{
  "name": "Description",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Description"
    }
  ]
}
{% endschema %}