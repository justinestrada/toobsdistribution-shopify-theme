<style>
#shopify-section-blog-banner {
    background-color: black;
    background-image: url("{{ 'default-banner.jpg' | asset_url }}");
}
{% if section.settings.banner_bg_img %}
    .blog-banner {
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: center;
        background-position: center right;
        background-repeat: no-repeat;
        background-size: cover; 
        min-height: 65px;
    }
    .blog-banner::before {
        content: "";
        height: 100%;
        width: 100%;
        background: rgba(0, 0, 0, 0.5);
        position: absolute;
        display: block;
    }
    @media only screen and (min-width: 768px) {
    	.blog-banner {
    		min-height: 175px;
    	}	
    }
    @media only screen and (min-width: 992px) {
    	.blog-banner {
    	    display: flex;
    	    height: 15vw;
    	    min-height: 260px;
    	}	
        .blog-banner::before {
            display: none;
        }
    }
    @media only screen and (min-width: 1200px) {
        .blog-banner {
            background-size: contain;
        }
    }
{% endif %}
</style>

<section class="blog-banner section" {% if section.settings.banner_bg_img %}style="background-image: url('{{ section.settings.banner_bg_img | img_url: '1920x' }}');"{% endif %} >
    <div class="container-fluid py-5">
      <div class="row">

      	<div class="container">
      		<div class="row">
    	        <div class="col col-lg-8 col-xl-6 text-white">
    	          <h1 class="text-uppercase" >{{ blog.title }}</h1>
                  {% if section.settings.banner_sub_title %}<p>{{ section.settings.banner_sub_title }}</p>{% endif %}
    	        </div>
      		</div>
      	</div>

      </div>
    </div>
</section>


{% schema %}
  {
    "name": "Blog Banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "banner_bg_img",
        "label": "Blog Banner"
      },
      {
        "type": "text",
        "id": "banner_sub_title",
        "label": "Sub Title"
      }
    ]

  }
{% endschema %}