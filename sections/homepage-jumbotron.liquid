<section class="homepage-jumbotron jumbotron jumbotron-fluid mb-0" style="" >

  <div class="h-50 d-flex justify-content-center align-items-end mb-3">

    <div class="container">
      <div class="row">
        <div class="col-md-12 white-text text-center">
          <h1 class="text-uppercase font-weight-bold m-0 mb-3" >{{ section.settings.heading }}</h1>
          <h5 class="text-uppercase m-0" >Get your hands on the best products for the industry's best prices.</h5>
        </div>
      </div>
    </div>

  </div>
  <div class="d-flex justify-content-center align-items-end">

    <div class="container">
      <div class="row justify-content-center mb-5">
        <div class="col-6 col-lg-3 text-center pr-0 mb-3 mb-sm-0" >
            <a class="btn btn-white px-2 px-md-4 mr-2 mr-md-5" href="{{ section.settings.first_button_link }}" title="{{ section.settings.first_button_text }}" >{{ section.settings.first_button_text }}</a>
        </div>
        {% if section.settings.second_button_text != blank %}
        <div class="col-6 col-lg-3 text-center pl-0" >
            <a class="btn btn-white btn-jumbotron-second px-2 px-md-4" href="{{ section.settings.second_button_link }}" title="{{ section.settings.second_button_text }}" >{{ section.settings.second_button_text }}</a>
        </div>
        {% endif %}
      </div>
    </div>

  </div>

</section>

{% schema %}
{
  "name": "Homepage Jumbotron",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_img",
      "label": "Jumbotron Background Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_bg_img",
      "label": "Mobile Jumbotron Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Jumbotron Heading"
    },
    {
      "type": "text",
      "id": "first_button_text",
      "label": "First Button Text"
    },
    {
      "type": "url",
      "id": "first_button_link",
      "label": "First Button Link"
    },
    {
      "type": "text",
      "id": "second_button_text",
      "label": "Second Button Text"
    },
    {
      "type": "url",
      "id": "second_button_link",
      "label": "Second Button Link"
    }
  ]
}
{% endschema %}