
<section class="homepage-video section section_homepage_three-videos section_homepage_100vh container-fluid py-5">
	<div class="row">
		<div class="container">
			<div class="row mb-5">
				<div class="col-md-12">
				  <div class="title text-uppercase text-center">
				    <h2 class="m-0">{{ section.settings.title }}</h2>
				  </div>
				</div>
			</div>
			<div class="row mb-5">
				<div class="col-12 col-xl-8 mb-3 mb-xl-0">
					<div class="homepage-video-thumbnail-wrap" video-number="1" >
						<img src="{{ section.settings.thumbnail_img_1 | img_url: '1920x1080' }}" alt="{{ section.settings.title }}" class="homepage-video-thumbnail img-fluid w-100" />
						<button class="homepage-video-thumbnail-btn btn btn-outline-black text-uppercase">{{ section.settings.btn_text_1 }}</button>
					</div>
					<div class="homepage-video-iframe-wrap homepage-video-iframe-wrap-1 embed-responsive embed-responsive-16by9 z-depth-1">
            {% if section.settings.vimeo_id_1 %}
              <iframe title="vimeo-player" src="https://player.vimeo.com/video/{{ section.settings.vimeo_id_1 }}" class="embed-responsive-item" frameborder="0" allowfullscreen></iframe>
            {% else %}
              <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/{{ section.settings.youtube_id_1 }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            {% endif %}
					</div>
				</div>
				<div class="col-12 col-xl-4">
					<div class="mb-3">
						<div class="homepage-video-thumbnail-wrap" video-number="2" >
							<img src="{{ section.settings.thumbnail_img_2 | img_url: '1920x1080' }}" alt="{{ section.settings.title }}" class="homepage-video-thumbnail img-fluid w-100" />
							<button class="homepage-video-thumbnail-btn btn btn-outline-black text-uppercase">{{ section.settings.btn_text_2 }}</button>
						</div>
						<div class="homepage-video-iframe-wrap homepage-video-iframe-wrap-2 embed-responsive embed-responsive-16by9 z-depth-1">
              {% if section.settings.youtube_id_2 %}
                <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/{{ section.settings.youtube_id_2 }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
              {% endif %}
						</div>
					</div>
					<div class="homepage-video-thumbnail-wrap" video-number="3" >
						<img src="{{ section.settings.thumbnail_img_3 | img_url: '1920x1080' }}" alt="{{ section.settings.title }}" class="homepage-video-thumbnail img-fluid w-100" />
						<button class="homepage-video-thumbnail-btn btn btn-outline-black text-uppercase">{{ section.settings.btn_text_3 }}</button>
					</div>
					<div class="homepage-video-iframe-wrap homepage-video-iframe-wrap-3 embed-responsive embed-responsive-16by9 z-depth-1">
            {% if section.settings.youtube_id_3 %}
              <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/{{ section.settings.youtube_id_3 }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            {% endif %}
					</div>
				</div>
			</div>
      {% if section.settings.show_view_more %}
        <div class="row mb-5">
          <div class="col text-center">
            <a href="{{ section.settings.view_more_link }}" class="btn btn-outline-black" title="View More" >View More</a>
          </div>
        </div>
      {% endif %}
		</div>
	</div>
</section>

