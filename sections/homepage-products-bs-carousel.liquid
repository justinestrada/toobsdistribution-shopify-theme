<style>
.d-none {
    display: none!important;
}

.carousel-multi-item .controls-top {
    text-align: center;
    margin-bottom: 1.88rem;
}
.carousel-multi-item .controls-top .btn-floating {
    background: black;
}
.btn-floating {
    -webkit-box-shadow: 0 5px 11px 0 rgba(0,0,0,.18), 0 4px 15px 0 rgba(0,0,0,.15);
    box-shadow: 0 5px 11px 0 rgba(0,0,0,.18), 0 4px 15px 0 rgba(0,0,0,.15);
    width: 47px;
    height: 47px;
    position: relative;
    z-index: 1;
    vertical-align: middle;
    display: inline-block;
    overflow: hidden;
    -webkit-transition: all .2s ease-in-out;
    -o-transition: all .2s ease-in-out;
    transition: all .2s ease-in-out;
    margin: 10px;
    -webkit-border-radius: 50%;
    border-radius: 50%;
    padding: 0;
    cursor: pointer;
}
.btn-floating i {
    display: inline-block;
    width: inherit;
    text-align: center;
    color: #fff;
}
.btn-floating i {
    font-size: 1.25rem;
    line-height: 47px;
}
.carousel-multi-item .carousel-indicators {
    margin-bottom: -2em;
}
.carousel-multi-item .carousel-indicators li {
    height: 1.25rem;
    width: 1.25rem;
    max-width: 1.25rem;
    background-color: #4285f4;
    margin-bottom: -3.75rem;
}
.carousel-indicators li {
    box-sizing: content-box;
    -ms-flex: 0 1 auto;
    flex: 0 1 auto;
    width: 30px;
    height: 3px;
    margin-right: 3px;
    margin-left: 3px;
    text-indent: -999px;
    cursor: pointer;
    background-color: #fff;
    background-clip: padding-box;
    border-top: 10px solid transparent;
    border-bottom: 10px solid transparent;
    opacity: .5;
    transition: opacity .6s ease;
}
.carousel .carousel-indicators li {
    width: .625rem;
    height: .625rem;
    -webkit-border-radius: 50%;
    border-radius: 50%;
    cursor: pointer;
}
.carousel-multi-item .carousel-indicators li {
    height: 1.25rem;
    width: 1.25rem;
    max-width: 1.25rem;
    background-color: #4285f4;
    margin-bottom: -3.75rem;
}
.carousel-multi-item .carousel-indicators .active {
    height: 1.56rem;
    width: 1.56rem;
    max-width: 1.56rem;
    background-color: #4285f4;
    -webkit-border-radius: 50%;
    border-radius: 50%;
}

.carousel-multi-item .carousel-inner .carousel-item.active, .carousel-multi-item .carousel-item-next, .carousel-multi-item .carousel-item-prev {
    display: block;
}

.card {
    -webkit-box-shadow: 0 2px 5px 0 rgba(0,0,0,.16), 0 2px 10px 0 rgba(0,0,0,.12);
    box-shadow: 0 2px 5px 0 rgba(0,0,0,.16), 0 2px 10px 0 rgba(0,0,0,.12);
    border: 0;
    font-weight: 400;
}
.card-img-top {
    width: 100%;
    border-top-left-radius: calc(.25rem - 1px);
    border-top-right-radius: calc(.25rem - 1px);
    display: block;
    max-width: 200px;
}

@media (min-width: 768px) {
  .d-md-block {
      display: block!important;
  }  
  .carousel-multi-item .col-md-4 {
      float: left;
      width: 33.333333%;
      max-width: 100%;
  }
}
</style>

<section class="products section container-fluid bg-gray">
  <div class="row">
    <div class="container">

      <div class="row mb-5">
        <div class="col-md-12">
          <div class="title text-uppercase text-center">
            <h3 class="mb-0">{{ section.settings.title }}</h3>
          </div>
        </div>
      </div>

        {% assign collection = collections[section.settings.collection] %}
        <div class="row">

          <div class="col">
            
            <!--Carousel Wrapper-->
            <div id="homepage-products-carousel" class="carousel slide carousel-multi-item" data-ride="carousel">

              <!--Controls-->
              <div class="controls-top">
                <a class="btn-floating" href="#homepage-products-carousel" data-slide="prev">
                  <i class="fa fa-chevron-left"></i>
                </a>
                <a class="btn-floating" href="#homepage-products-carousel" data-slide="next">
                  <i class="fa fa-chevron-right"></i>
                </a>
              </div>

              <!--Slides-->
              <div class="carousel-inner" role="listbox">

                <!--First slide-->
                <div class="carousel-item active">

                  {% for product in collection.products limit: section.settings.product_limit %}

                    {% assign carousel_item_index = forloop.index | modulo: 4 %}
                    {% if carousel_item_index == 0 %}
                      </div><div class="carousel-item">
                    {% endif %}

                    <div class="col-md-4">
                      <a class="card mb-2" href="{{ product.url }}" title="{{ product.title | escape }}" style="box-shadow: none;" >
                        {% if product.compare_at_price and product.compare_at_price != product.price %}
                          <span class="bage">Sale</span>
                        {% endif %}
                        {% if product.featured_image.src %}
                          <img class="card-img-top mx-auto" src="{{ product.featured_image.src | img_url: '1920x' }}"
                            alt="{{ product.title | escape }}"/>
                        {% endif %}
                        <div class="card-body text-center">
                          <h4 class="card-title text-uppercase text-black" style="font-size: 16px;" >{{ product.title }}</h4>
                          {% if customer %}
                            <p class="card-text text-black">{{ product.price | money }}</p>
                          {% else %}
                            <p class="card-text text-black">
                              <a href="/account" title="Account" class="text-uppercase" >Login to view price.</a>
                            </p>
                          {% endif %}
                        </div>
                      </a>
                    </div>
                  {% endfor %}
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Homepage Products",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Header",
      "default": "Best Sellers"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "product_limit",
      "label": "Product Limit",
      "min": 6,
      "max": 6,
      "default": 6
    }
  ]
}
{% endschema %}