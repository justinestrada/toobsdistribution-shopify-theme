
<div class="page container pt-5">

	<div class="row mb-5">
		<div class="col">
			<div class="section-header text-center">
				<h1 class="text-uppercase mb-0" >Reset Password</h1>
			</div>
		</div>
	</div>

	<div class="row justify-content-center mb-5">
		<div class="col-lg-8 col-xl-6">
						
			{% form 'reset_customer_password' %}

				{{ form.errors | default_errors }}

				<div class="form-group">
					<label for="password">Password</label>
					<input id="password" type="password" name="customer[password]" size="16" placeholder="Password" class="form-control w-100" />
				</div>
				<div class="form-group">
					<label for="password_confirmation">Password Confirmation</label>
					<input id="password_confirmation" type="password" name="customer[password_confirmation]" size="16" placeholder="Password Confirmation" class="form-control w-100" />
				</div>

				<button type="submit" value="Reset Password" class="btn btn-outline-black" >Reset Password</button>

			{% endform %}

		</div>
	</div>

</div>